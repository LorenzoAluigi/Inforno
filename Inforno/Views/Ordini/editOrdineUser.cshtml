        $(document).ready(function () {

            $('.addEditBtn').click(function () {
                
                var productId = $(this).data("id");
                console.log(productId);
                var quantita = $("#quantita_" + productId).val()
                console.log(quantita);
                
                
            });
        });

    </script>
}